{
	"name": "RunningTotal",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "sale1_dtst",
						"type": "DatasetReference"
					},
					"name": "source1"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "RunningTtlDB",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "window1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          saledate as date 'dd-MMM-yyyy',",
				"          { saleitem} as string,",
				"          { country} as string,",
				"          { quantity} as short",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     dateFormats: ['dd-MMM-yyyy']) ~> source1",
				"source1 window(asc(saledate, true),",
				"     RunningTotal = sum({ quantity})) ~> window1",
				"window1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          saledate as date,",
				"          saleitem as string,",
				"          country as string,",
				"          quantity as integer,",
				"          runningTtl as integer",
				"     ),",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     format: 'table',",
				"     errorHandlingOption: 'stopOnFirstError',",
				"     mapColumn(",
				"          saledate,",
				"          saleitem = { saleitem},",
				"          country = { country},",
				"          quantity = { quantity},",
				"          runningTtl = RunningTotal",
				"     )) ~> sink1"
			]
		}
	}
}